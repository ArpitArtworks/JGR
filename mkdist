#!/bin/sh
PDIR=`pwd`

rm -rf /tmp/${PNAME}

mkdir /tmp/${PNAME}

cp -r . /tmp/${PNAME}

cd /tmp

find ${PNAME}/ -name .svn | xargs rm -rf

cd ${PNAME}

echo "Creating package ..."
sh gradlew build

cd ${PDIR}

cp /tmp/${PNAME}/jgr-r/build/distributions/${PNAME}_${VER}.tar.gz ..
echo "Done."

ls -l ../${PNAME}_${VER}.tar.gz